generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id_user      Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  phone_number String        @unique
  birthday     DateTime?
  role         UserRole      @relation(fields: [role_id], references: [id_userRole])
  role_id      Int
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  Reservation  Reservation[]
}

model ParkingPlace {
  id_pplace   Int           @id @default(autoincrement())
  number      Int        @unique
  floor    Int
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  Reservation Reservation[]
}

model Reservation {
  id_reservation      Int               @id @default(autoincrement())
  user                User              @relation(fields: [user_id], references: [id_user])
  user_id             Int
  pplace              ParkingPlace      @relation(fields: [pplace_id], references: [id_pplace])
  pplace_id           Int
  valide_from         DateTime
  valide_to           DateTime
  car_plate           String
  status              ReservationStatus @relation(fields: [id_status], references: [id_reservationStatus])
  id_status           Int
  created_at          DateTime          @default(now())
  updated_at          DateTime          @updatedAt
  UserRole            UserRole?         @relation(fields: [userRoleId_userRole], references: [id_userRole])
  userRoleId_userRole Int?
}

model ReservationStatus {
  id_reservationStatus Int           @unique
  Reservation          Reservation[]
}

model UserRole {
  id_userRole Int           @unique
  Reservation Reservation[]
  User        User[]
}
